#include<bits/stdc++.h>
using namespace std;
bool maxdistance(int arr[],int dist,int cows,int n){
    int cowscount=1;
    int lastplaced=arr[0];
    for(int i=1;i<n;i++){
        if(arr[i]-lastplaced>=dist){
            cowscount++;
            lastplaced=arr[i];
        }
    }
    if(cowscount>=cows) return true;
    else return false;
}
int main(){
    int n=6;
    int arr[n]={0,3,4,7,9,10};
    int cows=4;
    int low=1;
    int high=*max_element(arr,arr+n) - *min_element(arr,arr+n);
    int store=0;
    while(low<=high){
        int mid=low+(high-low)/2;
        if(maxdistance(arr,mid,cows,n)){
            store=mid;
            low=mid+1;
        }
        else{
            high=mid-1;
        }
    }
    cout<<store;
}
